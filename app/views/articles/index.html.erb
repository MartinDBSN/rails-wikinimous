<div class="mt-3 col-8 mx-auto">
  <div class="d-flex justify-content-between">
  <h1>All movies</h1>
  <%= link_to new_article_path do %>
  <button class="btn btn-primary">Add a new movie</button>
  <% end %>
  </div>
  <% @articles.each do |article| %>
  <li class="list-group-item">
    <h2>
      <%=link_to article_path(article) do%>
      <%= article.title %>
      <i class="fa-2xs fa-solid fa-link"></i>
    <% end %>
    <%= link_to delete_article_path(article.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    <i class="ml-3 text-danger fa-2xs fa-solid fa-trash"></i>
    <% end %>
    </h2>
    <blockquote><%=article.content%></blockquote>
  </li>
  <%end%>
</div>
